{
    "manifest_version": 2,
    "name": "Viewfinder",
    "version": "1.0",

    "description": "Extension for Viewfinder",

    "content_scripts": [
        {
            "matches": ["*://twitter.com/*"],
            "js": ["main.js"],
            "run_at": "document_idle"
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": ["declarativeContent"],

    "page_action": {
        "default_popup": "index.html"
    }
}